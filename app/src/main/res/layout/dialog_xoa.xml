<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="120dp"
        android:background="@drawable/background4"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bạn có chắc chắn muốn xóa?"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#ff0"/>

        <LinearLayout
            android:layout_gravity="center"
            android:weightSum="10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button

                android:layout_weight="5"
                android:id="@+id/btn_chapnhanxoa"
                android:drawableLeft="@android:drawable/ic_menu_crop"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Chấp Nhận" />

            <Button

                android:drawableLeft="@android:drawable/ic_notification_clear_all"
                android:layout_weight="5"
                android:id="@+id/btn_huyboxoa"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Hủy Bỏ" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
